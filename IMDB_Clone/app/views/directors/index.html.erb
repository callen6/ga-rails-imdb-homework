<h1>Directors Index</h1>
<div class="directors">
<% @directors.each do |director| %>
	<h3> <%= director.name%> </h3>
	<%= director.rating %>
	<%= link_to director.name, director %>
	<%= director.description %>
	<%= link_to "edit director", edit_director_path(director) %>
	<%= link_to "destroy director", director, method: :delete, data:{confirm: "are you sure?"} %>
<% end %>
</div>
<div> <%= link_to "new director", new_director_path %> </div>